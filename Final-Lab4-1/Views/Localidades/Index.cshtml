@model IEnumerable<Final_Lab4_1.Models.Localidad>

@{
    ViewData["Title"] = "Index";
}

<h1>Localidades</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreLocalidades)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreLocalidades)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm mr-1">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-sm mr-1">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm ">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
